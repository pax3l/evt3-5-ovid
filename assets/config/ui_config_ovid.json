  "defaultBibliographicStyle": "chicago",
  "allowedBibliographicStyles": {
    "chicago": {
      "id": "chicago",
      "label": "Chicago (Author-Date)",
      "enabled": true,
      "propsOrder": [
        "author",
        "date",
        "title",
        "editor",
        "publication",
        "pubPlace",
        "publisher",
        "doi"
      ],
      "properties": {
        "titleQuotes": true,
        "emphasized": ["publisher"]
      }
    },
    "apa": {
      "id": "apa",
      "label": "APA",
      "enabled": true,
      "propsOrder": [
        "author",
        "date",
        "title",
        "publication",
        "publisher",
        "doi"
      ],
      "properties": {
        "authorStyle": {
          "delimiter": ",",
          "forenameInitials": true,
          "maxAuthors": 3
        },
        "publicationStyle": {
          "citingAcronym": "none",
          "inBrackets": ["issue"]
        },
        "propsDelimiter": ".",
        "titleQuotes": false,
        "emphasized": ["publication"],
        "inBrackets": ["date"]
      }
    },
    "mla": {
      "id": "mla",
      "label": "MLA",
      "enabled": true,
      "propsOrder": ["author", "title", "publication", "publisher", "doi"],
      "properties": {
        "propsDelimiter": ".",
        "authorStyle": {
          "delimiter": ","
        },
        "publicationStyle": {
          "citingAcronym": "all",
          "inBrackets": ["issue"],
          "includeEditor": true
        },
        "dateInsidePublication": true,
        "titleQuotes": false,
        "emphasized": ["publication"]
      }
    }
  },
  "visibleElements": [
    "milestone"
   ]
